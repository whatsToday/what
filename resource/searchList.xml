<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE sqlMap PUBLIC "-//ibatis.apache.org//DTD SQL Map 2.0//EN" "http://ibatis.apache.org/dtd/sql-map-2.dtd">
<sqlMap namespace="searchList">
   <typeAlias alias="SearchListVo" type="com.bit2015.what.vo.SearchListVo"/>
   
   <insert id="insert" parameterClass="SearchListVo">
      <![CDATA[
      INSERT INTO SEARCHLIST VALUES(searchList_no_seq.nextval, #member_no#, #memberName#, #search#, sysdate, #latitude#, #longitude#)
      ]]>
   </insert>

   <select id="selectAll" resultClass="SearchListVo">
      <![CDATA[
       SELECT * FROM SEARCHLIST
      ]]>
   </select>
  
   <delete id="delete" parameterClass="java.lang.Long">
      <![CDATA[
         delete from SEARCHLIST where  searchList_no=#searchList_no#
      ]]>
   </delete>
   
   <select id="selectAllByLoc" parameterClass="java.util.Map" resultClass="SearchListVo">
      <![CDATA[
       
 	select	* 
	from 	searchlist
	where 6371 * ACOS(
	       		COS( 37.566826 * 0.017453293 )
        		* COS( #lat# * 0.017453293 )
        		* COS( (#lng# * 0.017453293) - (126.9786567 * 0.017453293))
        		+ SIN( 37.566826 * 0.017453293 )
        		* SIN( #lat# * 0.017453293 )
    	) < #distance#


      ]]>
   </select>
   
   <select id="selectHotKey" parameterClass="java.util.Map" resultClass="java.lang.String">
      <![CDATA[
   	select * 
	from 	(select search, count(search)as cnt
		from searchlist
		where	 	6371 * ACOS(
					COS( 37.566826 * 0.017453293 )
					* COS( #lat# * 0.017453293 )
					* COS( ( #lng# * 0.017453293) - (126.9786567 * 0.017453293))
					+ SIN( 37.566826 * 0.017453293 )
					* SIN( #lat# * 0.017453293 )
			) < #distance#
		group by search order by cnt desc) b
	where rownum<=10
      ]]>
   </select>
   <!-- 		and	trunc(searchDate) = trunc(sysdate) -->
</sqlMap>